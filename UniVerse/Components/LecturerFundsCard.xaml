<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:UniVerse.Components"
             xmlns:viewmodels="clr-namespace:UniVerse.ViewModels"
             xmlns:models="clr-namespace:UniVerse.Models"
             x:DataType="models:LecturerFees"
             x:Class="UniVerse.Components.LecturerFundsCard">

    <Frame BackgroundColor="White" BorderColor="Transparent" Margin="0, 0, 0, 10" MaximumHeightRequest="100">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <FlexLayout Grid.Column="0" Direction="Row">
                <Image Aspect="AspectFill" Source="armand.png" WidthRequest="60" HeightRequest="60">
                    <Image.Clip>
                        <EllipseGeometry Center="30, 30" RadiusX="29.5" RadiusY="29.5" />
                    </Image.Clip>
                </Image>
            </FlexLayout>


            <Label Text="{Binding lecturer}" TextColor="{DynamicResource Gray900}" Grid.Column="1" FontSize="18" VerticalTextAlignment="Center" Padding="15, 0, 0, 0"/>
            <Label Text="R400/h" TextColor="{DynamicResource Gray500}" FontSize="16" Grid.Column="2" VerticalTextAlignment="Center"/>
            <Label Text="{Binding totalHoursWorked}" TextColor="{DynamicResource Gray500}" FontSize="16" Grid.Column="3" VerticalTextAlignment="Center"/>
            <Label Text="{Binding monthlyIncome, StringFormat='R{0}'}" TextColor="{DynamicResource Blue}" FontSize="16" Grid.Column="4" VerticalTextAlignment="Center"/>
            
        </Grid>
    </Frame>
</ContentView>

