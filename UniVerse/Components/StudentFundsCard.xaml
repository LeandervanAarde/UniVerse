<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniVerse.Components.StudentFundsCard">
    <Frame BackgroundColor="White" BorderColor="Transparent" Margin="0, 0, 0, 20">
        <FlexLayout JustifyContent="SpaceBetween">
            <HorizontalStackLayout>
                <Image Aspect="AspectFill" Source="leander.png" WidthRequest="60" HeightRequest="60">
                    <Image.Clip>
                        <EllipseGeometry Center="30, 30" RadiusX="29.5" RadiusY="29.5" />
                    </Image.Clip>
                </Image>
                <Label Text="Student Name" TextColor="{DynamicResource Gray900}" FontSize="18" VerticalTextAlignment="Center" Padding="15, 0, 0, 0"/>
            </HorizontalStackLayout>
            <Label Text="1 000" TextColor="{DynamicResource Green}" FontSize="16" VerticalTextAlignment="Center"/>
            <Label Text="- 500" TextColor="{DynamicResource Red}" FontSize="16" VerticalTextAlignment="Center"/>
            <Label Text="Total: R1 500" TextColor="{DynamicResource Gray500}" FontSize="16" VerticalTextAlignment="Center"/>
        </FlexLayout>
    </Frame>
</ContentView>

